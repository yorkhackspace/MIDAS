<%= form_with model: wizard do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% wizard.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% wizard.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <div>
      <%= form.label :sso_user_authorisation %><br>
      <%= form.select :sso_user_authorisation_id,
        options_for_select(
          auths_hash,
          wizard.sso_user_authorisation&.id
        ),
        {include_blank: false}
      %>
      <% wizard.errors.full_messages_for(:sso_user_authorisation).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
      <%= link_to("(New SSO User Authorisation)", new_sso_user_authorisation_path) %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
