<%= form_with model: sso_user_authorisation do |form| %>
  <div>
    <%= form.label :slug %><br>
    <%= form.text_field :slug %>
    <% sso_user_authorisation.errors.full_messages_for(:slug).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% sso_user_authorisation.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
